<Window x:Class="Face_Rec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Face_Rec"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label>Keterangan</Label>
            <Label x:Name="result"></Label>
        </StackPanel>
        <Image x:Name="imageBox" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid x:Name="loading">
            <Rectangle Fill="Black" Opacity="0.7"/>
            <fa:ImageAwesome Width="100" Icon="Spinner" Spin="True" SpinDuration="5" />
        </Grid>
        
    </Grid>
</Window>
